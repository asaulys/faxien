#!/bin/sh

#### Fill in values for these variables ####
REL_VSN=0.27.0.0
ERTS_VSN=5.5.5
###########################################

PREFIX=$(dirname $(dirname $0))

export ROOTDIR=$PREFIX
export BINDIR=$PREFIX/erts/$ERTS_VSN/bin
export EMU=beam
export PROGNAME=erl
export LD_LIBRARY_PATH=$PREFIX/erts/$ERTS_VSN/lib

$BINDIR/erlexec -config $PREFIX/release_packages/faxien/$REL_VSN/release/sys.config -boot $PREFIX/release_packages/faxien/$REL_VSN/release/faxien  -s fax_cmdln faxien_apply faxien $@ -s init stop -noshell -prefix $PREFIX
