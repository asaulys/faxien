#!/bin/sh

PREFIX=$(cd $(dirname $(dirname $0)); pwd)

#### Fill in values for these variables ####
REL_NAME=faxien
REL_VSN=0.28.0.0
ERTS_VSN=5.5.5
INVOCATION_SUFFIX="-s epkg_cmdln epkg_apply epkg $@ -s init stop -noshell -prefix $PREFIX"
###########################################

export ROOTDIR=$PREFIX/application_packages/$ERTS_VSN
export BINDIR=$PREFIX/erts/$ERTS_VSN/bin
export EMU=beam
export PROGNAME=erl
export LD_LIBRARY_PATH=$PREFIX/erts/$ERTS_VSN/lib

$BINDIR/erlexec -config $PREFIX/release_packages/$REL_NAME/$REL_VSN/release/sys.config -boot $PREFIX/release_packages/$REL_NAME/$REL_VSN/release/$REL_NAME $INVOCATION_SUFFIX
